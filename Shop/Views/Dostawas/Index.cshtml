@model IEnumerable<Shop.Models.Dostawa>

@{
    ViewBag.Title = "Index";
}

<h2>Dostawa</h2>

<p>
    @Html.ActionLink("Utwórz nowy", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nazwa)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cena)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Nazwa)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Cena)
        </td>
        <td>
            @Html.ActionLink("Edytuj", "Edit", new { id=item.DostawaId }) |
            @Html.ActionLink("Szczegóły", "Details", new { id=item.DostawaId }) |
            @Html.ActionLink("Usuń", "Delete", new { id=item.DostawaId })
        </td>
    </tr>
}

</table>
